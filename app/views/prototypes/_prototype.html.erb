<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img), prototype_path(prototype) %>
  <div class="prototype">
    <h2><%#= #prototype.user.name %></h2>
    <p><%#= prototype.concept %></p>
    <!-- その他のプロトタイプの属性を表示 -->
  </div>

  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype), class: :card__title %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to prototype.user.name, user_path(prototype.user), class: :card__user %>
  </div>
</div>
